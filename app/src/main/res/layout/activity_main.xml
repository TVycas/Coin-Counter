<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="388dp"
        android:layout_height="402dp"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/takePictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openCamera"
        android:text="Take picture"
        android:layout_toRightOf="@id/calculateSum"
        android:layout_below="@id/distSeekBar"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/loadImgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadImage"
        android:text="Load image"
        android:layout_toLeftOf="@id/calculateSum"
        android:layout_below="@id/distSeekBar"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/calculateSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Sum"
        android:onClick="calculateSum"
        android:layout_below="@id/distSeekBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/threshTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_below="@id/imageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <SeekBar
        android:id="@+id/threshSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_below="@id/threshTextView"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <SeekBar
        android:id="@+id/distSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_below="@id/distTextView"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/distTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_below="@id/threshSeekBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>


</RelativeLayout>